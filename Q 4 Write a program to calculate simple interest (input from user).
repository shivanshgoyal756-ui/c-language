#include <stdio.h>

int main() 
{   
    int p,t;
    float si,r;
    printf("\nEnter principal amount...");
    scanf("%d",&p);
    printf("\nEnter time period...");
    scanf("%d",&t);
    printf("\nEnter rate of intrest...");
    scanf("%f",&r);
    si=r*t*p/100;
    printf("\nSimple Intrest = %f",si);
    return 0;
}
